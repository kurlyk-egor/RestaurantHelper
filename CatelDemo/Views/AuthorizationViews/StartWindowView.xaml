<catel:UserControl
    x:Class="RestaurantHelper.Views.AuthorizationViews.StartWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://catel.codeplex.com">

    <catel:UserControl.Background>
        <ImageBrush ImageSource="../../Images/main.png" />
    </catel:UserControl.Background>

    <Grid
        x:Name="LayoutRoot"
        Width="385"
        Height="530">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240*" />
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="240*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="480*" />
            <RowDefinition Height="120*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="Button"
            Grid.Row="1"
             Height="45"
            FontFamily="Georgia"
            FontSize="17"
            FontWeight="Normal"
            Margin="20,30,15,30"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding EnterCommand}"
            Content="Вход">
            <Button.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="1" Color="#FF75CAD3" />
                    <GradientStop Color="#FFC7EBF3" />
                    <GradientStop Offset="0.508" Color="#FF2AB1CF" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button
            x:Name="Button1"
            Grid.Row="1"
            Grid.Column="2"
            Height="45"
            FontFamily="Georgia"
            FontSize="16"
            FontWeight="Normal"
            Padding="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding RegistrationCommand}"
            Content="Регистрация" Margin="3,30,17,30">
            <Button.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="1" Color="#FF75CAD3" />
                    <GradientStop Color="#FFC7EBF3" />
                    <GradientStop Offset="0.508" Color="#FF2AB1CF" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button
            Grid.Row="1"
            Margin="4,30,9,30"
            Height="45"
            Width="100"
            FontFamily="Georgia"
            FontSize="17"
            FontWeight="Normal"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding ExitCommand}"
            Content="Выход" Grid.Column="1">
            <Button.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="1" Color="#FF75CAD3" />
                    <GradientStop Color="#FFC7EBF3" />
                    <GradientStop Offset="0.508" Color="#FF2AB1CF" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>

</catel:UserControl>
