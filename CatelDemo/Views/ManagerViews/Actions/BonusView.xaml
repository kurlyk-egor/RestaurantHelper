<catel:UserControl
    x:Class="RestaurantHelper.Views.ManagerViews.Actions.BonusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://catel.codeplex.com"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:validationRules="clr-namespace:RestaurantHelper.Services.ValidationRules">

    <Grid
        MinWidth="450"
        MinHeight="420"
        Margin="15"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <GroupBox
            x:Name="groupBox"
            Margin="15,15,15,27"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Header="Параметры акции:" Background="White"
            FontFamily="Georgia">
            <Grid>
                <TextBlock
                    x:Name="textBlock"
                    Margin="25,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Бесплатное блюдо:"
                    TextWrapping="Wrap" />
                <ComboBox
                    x:Name="comboBox"
                    Width="120"
                    Height="48"
                    Margin="20,31,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ItemsSource="{Binding Dishes}"
                    SelectedItem="{Binding SelectedDish}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock
                    x:Name="textBlock_Copy"
                    Width="50"
                    Margin="20,100,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Сумма заказа"
                    TextWrapping="Wrap">
                    <TextBlock.ToolTip>
                        <TextBlock Text="Если пользователь закажет больше этой суммы, он получит бесплатное блюдо" TextWrapping="Wrap" />
                    </TextBlock.ToolTip>
                </TextBlock>
                <Slider
                    x:Name="Slider"
                    Width="317"
                    Height="30"
                    Margin="75,102,0,194"
                    HorizontalAlignment="Left"
                    AutoToolTipPlacement="TopLeft"
                    IsMoveToPointEnabled="True"
                    IsSnapToTickEnabled="True"
                    Maximum="5000"
                    Minimum="100"
                    TickFrequency="100"
                    Value="{Binding DiscountValue}" />

                <Button
                    Margin="20,0,5,10"
                    VerticalAlignment="Bottom"
                    Command="{Binding ApplyAction}"
                    Content="Применить акцию"
                    Style="{StaticResource ValidatingButton}" BorderBrush="{x:Null}" FontFamily="Georgia" FontSize="16" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF75CAD3" Offset="1"/>
                            <GradientStop Color="#FFC7EBF3"/>
                            <GradientStop Color="#FF2AB1CF" Offset="0.508"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <TextBox
                    x:Name="ValidationRequiredField2"
                    Width="231"
                    Height="40"
                    Margin="0,19,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.FloatingScale="0.8"
                    materialDesign:HintAssist.Hint="Название акции"
                    materialDesign:HintAssist.IsFloating="True"
                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                    MaxLength="20">
                    <TextBox.BorderBrush>
                        <SolidColorBrush Color="#FF47AFF7"/>
                    </TextBox.BorderBrush>
                    <TextBox.Text>
                        <Binding Path="ActionName" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validationRules:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                                <validationRules:StringLengthMinMaxValidationRule
                                    Max="20"
                                    Min="5"
                                    ValidatesOnTargetUpdated="True" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <TextBlock
                    Width="200"
                    Height="26"
                    Margin="20,150,20,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Информация об акции:" />

                <TextBox
                    x:Name="ValidationRequiredField1"
                    Width="372"
                    Height="92"
                    Margin="20,170,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Top"
                    AcceptsReturn="True"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"
                    BorderThickness="1"
                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                    TextWrapping="Wrap">
                    <TextBox.Text>
                        <Binding Path="ActionInfo" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validationRules:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                                <validationRules:StringLengthMinMaxValidationRule
                                    Max="150"
                                    Min="15"
                                    ValidatesOnTargetUpdated="True" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <Label
                    x:Name="label"
                    Margin="203,71,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="{Binding ElementName=Slider, Path=Value}"
                    FontSize="16"
                    Foreground="{DynamicResource PrimaryHueMidBrush}" />
            </Grid>
        </GroupBox>
    </Grid>

</catel:UserControl>
